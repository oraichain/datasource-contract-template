{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpecialQuery",
  "description": "An implementation of QueryRequest::Custom to show this works and can be extended in the contract",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "fetch"
      ],
      "properties": {
        "fetch": {
          "type": "object",
          "required": [
            "authorization",
            "body",
            "method",
            "url"
          ],
          "properties": {
            "authorization": {
              "type": "string"
            },
            "body": {
              "type": "string"
            },
            "method": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          }
        }
      }
    }
  ]
}